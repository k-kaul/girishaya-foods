generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  phoneNumber String?
  cartItems   CartItems[]
}

model CartItems {
  id        String @id @default(uuid())
  quantity  Int
  productId String
  userId    String

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([productId, userId])
}

model Product {
  id           String      @id @default(uuid())
  name         String
  itemQuantity Int
  itemWeight   String
  price        Int
  images       Images[]
  cartItems    CartItems[]
}

model Images {
  id        String  @id @default(uuid())
  imageLink String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}
